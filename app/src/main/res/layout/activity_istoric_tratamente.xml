<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitati.IstoricTratamenteActivity">

    <LinearLayout
        android:layout_width="303dp"
        android:layout_height="450dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="132dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_tratamente_istoric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tratamente"
            android:textColor="@color/colorPrimaryLight"
            android:textFontWeight="5"
            android:textSize="40px"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_tratamente_istoric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"/>

        <TextView
            android:id="@+id/tv_observatii_istoric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observatii"
            android:textColor="@color/colorPrimaryLight"
            android:textFontWeight="5"
            android:textSize="40px"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_observatii_istoric"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>