<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000px"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="350px"
    android:layout_marginLeft="40px"
    android:layout_marginTop="20px"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:background="@drawable/gradient1"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nume_pacient_main"
            android:layout_width="362dp"
            android:layout_height="108dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/layout_butoane">

            <Button
                android:id="@+id/btn_adaugare_observatie_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adaugare observatie"
                android:background="@drawable/bg_button"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"/>

            <Button
                android:id="@+id/btn_adaugare_diagnostic_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adaugare diagnostic"
                android:background="@drawable/bg_button"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>