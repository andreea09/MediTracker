<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitati.AdaugareAngajatActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_adaugare_angajat"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Adaugare angajat"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_nume_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Nume"
                android:inputType="textPersonName"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_prenume_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Prenume"
                android:inputType="textPersonName"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_dataN_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Data nasterii"
                android:inputType="date"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <Spinner
                android:id="@+id/sp_sex_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_adresa_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Adresa"
                android:inputType="textPersonName"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_nrTel_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Numar telefon"
                android:inputType="number"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_adresaE_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Adresa e-mail"
                android:inputType="textEmailAddress"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_cnp_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="CNP"
                android:inputType="number"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <Spinner
                android:id="@+id/sp_pozitie_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <Spinner
                android:id="@+id/sp_sectie_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <EditText
                android:id="@+id/et_parola_angajat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Parola cont angajat"
                android:inputType="textPersonName"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>

            <Button
                android:id="@+id/btn_creare_angajat"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:text="Creare cont angajat"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="20px"
                android:layout_marginRight="20px"
                android:layout_marginEnd="20px"
                android:layout_marginLeft="20px"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>